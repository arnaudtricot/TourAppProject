<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mapItemLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ItemMapActivity" >
    
        <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />
    
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/map"  >
    
    
	<Button
	    android:id="@+id/btWiki"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:background="@drawable/wikipedia" />
	
	<Button
	    android:id="@+id/btNav"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:background="@drawable/google_navigation_logo" />

	<Button
	    android:id="@+id/btStrvw"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:background="@drawable/streetview" />

    <Button
        android:id="@+id/btncarte"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/photos" />

    <Button
        android:id="@+id/btnback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retour" />
   </LinearLayout>  

 
    	
	<Gallery android:id="@+id/galleryMaps"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="bottom"/>

	
		
</RelativeLayout>
 